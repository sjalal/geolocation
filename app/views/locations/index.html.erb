<div class="span11">
  <h3>Locations</h3>

  <table class="table table-striped">
    <tr>
      <th>Address</th>
      <th>City</th>
      <th>Zip</th>
      <th>Country</th>
      <th>Latitude</th>
      <th>Longitude</th>
      <th>Date</th>
    </tr>

  <% for location in @locations %>
  
    <tr>
      <td><%= link_to location.address, location %></td>
      <td><%= location.city %></td>
      <td><%= location.postcode %></td>
      <td><%= location.country %></td>
      <td><%= location.lat %></td>
      <td><%= location.lng %></td>
      <td><%= location.created_at.to_s(:short) %></td>
      <td><%= link_to "Edit", edit_location_path(location) %></td>
      <td><%= link_to "Delete", location, :confirm => "Are you sure?", :method => :delete %></td>
    </tr>
  <% end %>
  </table>

  <br />

  <div class="pagination">
    <%= paginate @locations %>
  </div>
  <p><%= link_to "New Location", new_location_path %></p>

</div>