<div class="span11">
  <% if notice %>
    <p class="notice"><%= notice %></p>
  <% end %>

  <p>
    <b>Address:</b>
    <%= @location.address %>
  </p>

  <p>
    <b>City:</b>
    <%= @location.city %>
  </p>

  <p>
    <b>Postcode:</b>
    <%= @location.postcode %>
  </p>

  <p>
    <b>Country:</b>
    <%= @location.country %>
  </p>

  <p>
    <b>Latitude:</b>
    <span id="location_lat"><%= @location.lat %></span>
  </p>

  <p>
    <b>Longitude:</b>
    <span id="location_lng"><%= @location.lng %></span>
  </p>

  <%= render :partial => "googlemap_show" %>

  <h3>Nearby Location</h3>
   <!-- insert nearby location method here --> 
    <ul>
      <% for location in @location.nearbys(10) %>
        <li><%= link_to location.location_name, location %> (<%= location.distance.to_f.round(2) %> miles)</li>
      <% end %>
    </ul>

     <%= link_to "New", new_location_path %> |
     <%= link_to "Edit", edit_location_path(@location) %> |
     <%= link_to "Delete", @location, :confirm => "Are you sure", :method => :delete %> | 
     <%= link_to "View all", locations_path %>   

</div>

